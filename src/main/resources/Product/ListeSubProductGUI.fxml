<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.Controlleurs.ProductControlleur.SubscriptionListeController"
            prefWidth="1100" prefHeight="700"
            stylesheets="/Styles/StyleProduct.css"
            styleClass="main-container">

    <!-- TOP BAR -->
    <VBox styleClass="top-bar" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <!-- Header with Back Button -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-bar">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <Button text="â¬… Retour" onAction="#goBackToMenu" styleClass="btn-back">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Button>

            <Label text="ðŸ“‹ Liste des Abonnements" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Stats Summary -->
            <VBox alignment="CENTER" spacing="3" styleClass="stat-box">
                <Label fx:id="lblTotalSubscriptions" text="0" styleClass="stat-number">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Total" styleClass="stat-label">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </VBox>

            <VBox alignment="CENTER" spacing="3" styleClass="stat-box-active">
                <Label fx:id="lblActiveSubscriptions" text="0" styleClass="stat-number">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Actifs" styleClass="stat-label">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </VBox>

            <VBox alignment="CENTER" spacing="3" styleClass="stat-box-draft">
                <Label fx:id="lblDraftSubscriptions" text="0" styleClass="stat-number">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Brouillon" styleClass="stat-label">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </VBox>

            <VBox alignment="CENTER" spacing="3" styleClass="stat-box-warning">
                <Label fx:id="lblExpiringSoon" text="0" styleClass="stat-number">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Expire inf 30j" styleClass="stat-label">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </VBox>
        </HBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="action-bar">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <Button text="âž• Nouvel Abonnement" onAction="#goToCreate" styleClass="btn-add">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Button>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Filter ComboBox -->
            <Label text="Type:" styleClass="filter-label">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <ComboBox fx:id="cbTypeFilter" promptText="Tous" prefWidth="150" styleClass="filter-combo">
                <items>
                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                        <String fx:value="Tous"/>
                        <String fx:value="MONTHLY"/>
                        <String fx:value="ANNUAL"/>
                        <String fx:value="TRANSACTION"/>
                        <String fx:value="ONE_TIME"/>
                    </javafx.collections.FXCollections>
                </items>
            </ComboBox>

            <Label text="Statut:" styleClass="filter-label">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
            <ComboBox fx:id="cbStatusFilter" promptText="Tous" prefWidth="120" styleClass="filter-combo">
                <items>
                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                        <String fx:value="Tous"/>
                        <String fx:value="ACTIVE"/>
                        <String fx:value="DRAFT"/>
                        <String fx:value="SUSPENDED"/>
                        <String fx:value="CLOSED"/>
                    </javafx.collections.FXCollections>
                </items>
            </ComboBox>

            <!-- Search Bar -->
            <TextField fx:id="tfSearch" promptText="ðŸ” Rechercher..."
                       prefWidth="250.0" styleClass="search-field">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>

            <Button text="RÃ©initialiser" onAction="#resetSearch" styleClass="btn-reset">
                <font>
                    <Font size="12.0" />
                </font>
            </Button>
        </HBox>
    </VBox>

    <!-- CENTER CONTENT -->
    <VBox spacing="20" styleClass="content-area" AnchorPane.topAnchor="180.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.bottomAnchor="80.0">

        <!-- List Header -->
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="list-header">
            <Label text="ðŸ“Š" style="-fx-font-size:24px;"/>
            <Label text="Abonnements Produits" styleClass="list-title">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblFilteredCount" text="Affichage: 0 abonnements" styleClass="filter-count">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
        </HBox>

        <!-- ListView -->
        <ListView fx:id="subscriptionListView" styleClass="product-listview" VBox.vgrow="ALWAYS"/>

    </VBox>

    <!-- Footer with Stats -->
    <HBox alignment="CENTER" spacing="20" styleClass="list-footer" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="15" bottom="15"/>
        </padding>

        <Label text="Total:" styleClass="footer-label">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="lblTotal" text="0" styleClass="footer-value">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Separator orientation="VERTICAL" prefHeight="20"/>

        <Label text="Actifs:" styleClass="footer-label">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="lblActiveCount" text="0" styleClass="footer-value-success">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Separator orientation="VERTICAL" prefHeight="20"/>

        <Label text="Suspendus:" styleClass="footer-label">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="lblSuspendedCount" text="0" styleClass="footer-value-warning">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Separator orientation="VERTICAL" prefHeight="20"/>

        <Label text="FermÃ©s:" styleClass="footer-label">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="lblClosedCount" text="0" styleClass="footer-value-danger">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
    </HBox>

</AnchorPane>
