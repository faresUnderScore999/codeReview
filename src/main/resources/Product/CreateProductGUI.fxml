<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="/Styles/StyleProduct.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controlleurs.ProductControlleur.ProductCreationGUI">

    <!-- Header Section with Back Button -->
    <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="800.0" styleClass="header" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>

            <Button onAction="#goBackToList" prefWidth="120.0" styleClass="btn-back" text="⬅ Retour">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Button>

            <Region HBox.hgrow="ALWAYS" />

            <Label styleClass="header-title" text="Créer un Nouveau Produit">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>

    <!-- Main Form Section -->
    <ScrollPane fitToWidth="true" layoutY="80.0" prefHeight="520.0" prefWidth="800.0" styleClass="form-scroll" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
        <VBox spacing="25.0" styleClass="form-container">
            <padding>
                <Insets bottom="40.0" left="60.0" right="60.0" top="40.0" />
            </padding>

            <!-- Form Title -->
            <VBox spacing="8.0" styleClass="form-intro">
                <Label styleClass="form-section-title" text="Informations du Produit">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Separator prefWidth="200.0" />
                <Label styleClass="form-subtitle" text="Remplissez les champs ci-dessous pour créer un nouveau produit bancaire" />
            </VBox>

            <!-- Category -->
            <VBox spacing="8.0" styleClass="input-group">
                <Label styleClass="form-label" text="Catégorie *">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="categoryComboBox" prefWidth="400.0" promptText="Sélectionner une catégorie" styleClass="form-input">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="COMPTE_COURANT" />
                            <String fx:value="COMPTE_EPARGNE" />
                            <String fx:value="COMPTE_PREMIUM" />
                            <String fx:value="COMPTE_JEUNE" />
                            <String fx:value="COMPTE_ENTREPRISE" />
                            <String fx:value="CARTE_DEBIT" />
                            <String fx:value="CARTE_CREDIT" />
                            <String fx:value="CARTE_PREMIUM" />
                            <String fx:value="CARTE_VIRTUELLE" />
                            <String fx:value="EPARGNE_CLASSIQUE" />
                            <String fx:value="EPARGNE_LOGEMENT" />
                            <String fx:value="DEPOT_A_TERME" />
                            <String fx:value="PLACEMENT_INVESTISSEMENT" />
                            <String fx:value="ASSURANCE_VIE" />
                            <String fx:value="ASSURANCE_HABITATION" />
                            <String fx:value="ASSURANCE_VOYAGE" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Label styleClass="help-text" text="Choisissez le type de produit bancaire" />
            </VBox>

            <!-- Price -->
            <VBox spacing="8.0" styleClass="input-group">
                <Label styleClass="form-label" text="Prix (DT) *">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <TextField fx:id="priceField" prefWidth="300.0" promptText="0.00" styleClass="form-input" />
                    <Label styleClass="currency-symbol" text="DT">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                </HBox>
                <Label styleClass="help-text" text="Entrez le prix du produit (ex: 29.99)" />
            </VBox>

            <!-- Description -->
            <VBox spacing="8.0" styleClass="input-group">
                <Label styleClass="form-label" text="Description *">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <TextArea fx:id="descriptionArea" prefHeight="140.0" promptText="Entrez une description détaillée du produit..." styleClass="form-textarea" wrapText="true" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label fx:id="charCountLabel" styleClass="char-count" text="0/500 caractères" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="required-indicator" text="* Champs obligatoires">
                        <font>
                            <Font size="11.0" />
                        </font>
                    </Label>
                </HBox>
            </VBox>

            <!-- Separator before buttons -->
            <Separator prefWidth="200.0" />

            <!-- Buttons Section -->
            <HBox alignment="CENTER" spacing="20.0" styleClass="button-container">
                <padding>
                    <Insets bottom="10.0" top="10.0" />
                </padding>

                <Button fx:id="saveButton" onAction="#CreateProduct" prefWidth="180.0" styleClass="btn-primary" text="Enregistrer">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="clearButton" onAction="#handleClear" prefWidth="180.0" styleClass="btn-secondary" text="Réinitialiser">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </HBox>

            <!-- Info Box -->
            <VBox spacing="10.0" styleClass="info-box">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                </padding>
                <Label styleClass="info-title" text="ℹ️ Informations importantes">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <Label styleClass="info-text" text="• Assurez-vous que toutes les informations sont correctes avant d'enregistrer" wrapText="true" />
                <Label styleClass="info-text" text="• La description doit être claire et informative pour les clients" wrapText="true" />
                <Label styleClass="info-text" text="• Le prix doit être précis et conforme à votre politique tarifaire" wrapText="true" />
            </VBox>

        </VBox>
    </ScrollPane>

</AnchorPane>
