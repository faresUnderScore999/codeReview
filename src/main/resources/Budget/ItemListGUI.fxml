<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.Controlleurs.BudgetControlleur.ItemListController"
            prefWidth="1375" prefHeight="720"
            stylesheets="/Styles/StyleBudget.css"
            styleClass="main-container">

    <!-- TOP BAR -->
    <top>
        <VBox styleClass="top-bar">
            <!-- Header with Back Button and Stats -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-bar">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30"/>
                </padding>

                <Button text="â¬… Retour" onAction="#goBackToMenu" styleClass="btn-back">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Button>

                <Label text="ðŸ“ Liste des Items" styleClass="page-title">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Stats Summary -->
                <VBox alignment="CENTER" spacing="3" styleClass="stat-box">
                    <Label fx:id="lblTotalItems" text="0" styleClass="stat-number">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="Items" styleClass="stat-label">
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </Label>
                </VBox>

                <VBox alignment="CENTER" spacing="3" styleClass="stat-box">
                    <Label fx:id="lblMontantTotal" text="0.00 DT" styleClass="stat-number">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Label text="Montant Total" styleClass="stat-label">
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="action-bar">
                <padding>
                    <Insets top="15" right="30" bottom="15" left="30"/>
                </padding>

                <Button text="âž• Ajouter Item" onAction="#goToCreate" styleClass="btn-add">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Button>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Search Bar -->
                <TextField fx:id="tfSearch" promptText="ðŸ” Rechercher un item..."
                           prefWidth="250.0" styleClass="search-field">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </TextField>

                <Button text="RÃ©initialiser" onAction="#resetSearch" styleClass="btn-reset">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="20" styleClass="content-area">
            <padding>
                <Insets top="20" right="30" bottom="30" left="30"/>
            </padding>

            <!-- List Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="list-header">
                <Label text="ðŸ“‹" style="-fx-font-size:24px;"/>
                <Label text="Items" styleClass="list-title">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblFilteredCount" text="Affichage: 0 items" styleClass="filter-count">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
            </HBox>

            <!-- Table Column Headers -->
            <HBox spacing="12" styleClass="table-header">
                <padding>
                    <Insets top="8" right="12" bottom="8" left="12"/>
                </padding>

                <Label text="ID" styleClass="table-col id-col" />
                <Label text="Nom" styleClass="table-col name-col" HBox.hgrow="ALWAYS" />
                <Label text="CatÃ©gorie" styleClass="table-col category-col" />
                <Label text="Montant" styleClass="table-col montant-col" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Actions" styleClass="table-col actions-col" />
            </HBox>

            <!-- ListView -->
            <ListView fx:id="itemListView" styleClass="item-listview categorie-listview" VBox.vgrow="ALWAYS"/>

            <!-- Footer with Totals -->
            <HBox alignment="CENTER" spacing="20" styleClass="list-footer">
                <padding>
                    <Insets top="15" bottom="15"/>
                </padding>

                <Label text="Total Montants:" styleClass="footer-label">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="lblSommeMontants" text="0.00 DT" styleClass="footer-value">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>

                <Separator orientation="VERTICAL" prefHeight="20"/>

                <Label text="Nombre Items:" styleClass="footer-label">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="lblSommeItems" text="0" styleClass="footer-value-warning">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </center>

</BorderPane>